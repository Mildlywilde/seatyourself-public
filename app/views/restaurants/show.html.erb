<div class="container">
<h1><%= @restaurant.name %></h1>
<% if current_user != nil %>
<% if current_user.id == @restaurant.owner_id %>
<%= link_to 'Edit Resturant Info', edit_restaurant_path %>.&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to "Delete Resturant", restaurant_path, method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
<% end %>
<% end %>
<hr>
<div class="row">
<div class="thumbnail col-md-6">
  <p>
    <strong> Address: </strong>    <br/><%= @restaurant.address %><br/>
    <strong> Phone Number:</strong>  <br/><%= @restaurant.phone_number %><br/>
    <strong> Available Seating:</strong>  <br/><%= @restaurant.seats %> seats<br/>
  </p>
  <p>
        <strong> Description:</strong><br/>
    <%= @restaurant.description%>
  </p>
</div>
<div class="col-md-6">
  <p><%= image_tag @restaurant.image.url, id:"rest-pic" %></p>
</div>
</div>
<% if current_user != nil %>
<%= link_to "Make an reservation for this restaurant", new_restaurant_reservation_path(@restaurant.id), class: "btn btn-success" %>
<% else %>
<%= link_to "Make an reservation for this restaurant", new_session_url, class: "btn btn-success" %>
<% end %>
<hr>
<div class="container">
  <h3>Reviews</h3>
</div>
</div>

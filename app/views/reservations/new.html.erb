<h1>Make a new reservation at <%= @restaurant.name %></h1>
<%= form_for [@restaurant, @reservation] do |f|%>
<p>
  <%= f.label :date %>
  <%= f.date_field :date %>
</p>
<p>
  <%= f.label :time %>
  <%= f.time_field :time %>
</p>
<p>
  <%= f.label :party_size %>
  <%= f.number_field :party_size %>
</p>
<p>
  <%= f.submit %>
</p>

<% end %>
